# Block 1: Redirect all HTTP traffic to HTTPS on the canonical 'www' domain
server {
  listen 80;
  listen [::]:80;
  server_name mentora.de www.mentora.de;
  
  # A single rule to handle all HTTP requests and send them to the correct final destination
  return 301 https://www.mentora.de$request_uri;
}

# Block 2: Redirect non-www HTTPS to www HTTPS for canonical URL
server {
  listen 443 ssl http2;
  listen [::]:443 ssl http2;
  # QUIC (HTTP/3) listeners can be added here as well if needed
  # listen 443 quic;
  # listen [::]:443 quic;

  server_name mentora.de;

  # SSL certificates are required here too for the redirect to work
  {{ssl_certificate}}
  {{ssl_certificate_key}}

  return 301 https://www.mentora.de$request_uri;
}

# Block 3: The main server block that handles all application logic
server {
  listen 443 ssl http2;
  listen [::]:443 ssl http2;
  listen 443 quic;
  listen [::]:443 quic;
  http3 on; # Recommended to turn on if QUIC is enabled

  server_name www.mentora.de;

  # SSL, Root, and Logging
  {{ssl_certificate}}
  {{ssl_certificate_key}}
  {{root}} # Note: This root is only used if other locations don't specify their own.
  {{nginx_access_log}}
  {{nginx_error_log}}

  # Global settings and headers
  include /etc/nginx/global_settings;
  add_header Cache-Control no-transform;
  index index.html;

  # Location for Let's Encrypt SSL renewal
  location ^~ /.well-known/acme-challenge/ {
    # This should point to the directory where certbot places challenge files
    root /var/www/certbot; 
    # Or if it's within your main project root:
    # root /home/mentora/htdocs/www.mentora.de; 
    allow all;
  }

  # Block access to sensitive files
  location ~ /\.env {
    deny all;
  }
  
  # Location for WebSocket connections
  location /api/notifications/ws {
    proxy_pass https://backend_api/api/notifications/ws; # Keep the full path for this specific endpoint
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_read_timeout 86400; # Long timeout for persistent connections
  }

  # Location for all other API calls.
  # The trailing slash on proxy_pass is CRITICAL for removing the /api/ prefix.
  location ^~ /api/ {
    # Pass the full path to the backend
    proxy_pass https://217.154.223.224; 

    # --- These two lines are essential for your SSL proxy to work ---
    proxy_ssl_server_name on;
    proxy_ssl_name worker.mentora.de;
    proxy_ssl_session_reuse on;

    
    # --- Standard proxy headers ---
    proxy_http_version 1.1;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for; 
    proxy_set_header X-Forwarded-Proto $scheme;
  }

  # Serve static assets with long cache times
  location /assets/ {
    # Alias is good, but check if root works better for your setup
    root /home/mentora/htdocs/www.mentora.de/dist;
    expires 1y;
    add_header Cache-Control "public, immutable";
    try_files $uri =404; # Serve file or 404, don't fall back to index.html
  }

  # Serve the frontend application (React, Vue, etc.)
  # This is the catch-all for any request that didn't match above
  location / {
    root /home/mentora/htdocs/www.mentora.de/dist;
    try_files $uri /index.html;
  }
}

